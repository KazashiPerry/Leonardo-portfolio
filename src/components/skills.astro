---
import { skills } from "../config/skills.json";
import { Icon } from "astro-icon";
---

<p
  class="text-4xl pb-32 lg:pb-20 pl-10 bg-celeste-crema  pt-20 font-semibold text-negro" id="Skills"
>
  My skills
</p>
<div
  class="grid lg:grid-cols-6 md:grid-cols-3 sm:grid-cols-2 place-items-center bg-celeste-crema  lg:pb-32"
>
  {
    skills.map((skill) => (
      <div class="flex flex-col items-center pb-10 bg-celeste-crema border-2 dark:border-negro border-crema p-4 rounded-2xl hover:scale-110 hover:bg-celeste">
        <img
          class="imagen "
          src={skill.img}
          alt=""
        />
        <p class="text-negro text-2xl pt-4 font-semibold">{skill.title}</p>
      </div>
    ))
  }
</div>

<style>
  .imagen {
    width: 8rem;
  }
    

</style>
